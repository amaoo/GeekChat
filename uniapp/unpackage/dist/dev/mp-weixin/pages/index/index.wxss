.notice {
  margin-top: 15rpx;
}
.form {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 0 0 30rpx 30rpx;
}
.form .logo {
  margin-top: 10%;
}
.form .title {
  font-size: 38rpx;
  font-weight: bolder;
  margin-top: 15rpx;
}
.form .desc {
  margin-top: 15rpx;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}
.tool_list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 20rpx;
  align-items: stretch;
}
.tool_list .group_tool_wrap {
  min-height: 168rpx;
  width: 347rpx;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 2px 2px 5px rgba(93, 105, 143, 0.4);
  margin-top: 20rpx;
}
.tool_list .group_tool_wrap .label_wrap {
  display: flex;
  width: 60rpx;
  height: 32rpx;
  border-radius: 3px;
  color: #fff;
  font-size: 20rpx;
  font-weight: 500;
  justify-content: center;
  align-items: center;
  position: relative;
  left: 287rpx;
  z-index: 1;
}
.tool_list .group_tool_wrap .tool_wrap {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  padding: 0 30rpx 30rpx 30rpx;
}
.tool_list .group_tool_wrap .tool_wrap .tool_info {
  flex: 1;
}
.tool_list .group_tool_wrap .tool_wrap .tool_info .tool_name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}
.tool_list .group_tool_wrap .tool_wrap .tool_info .tool_hint {
  margin-top: 15rpx;
  font-size: 18rpx;
  font-weight: 500;
  color: #999;
}
.tool_list .group_tool_wrap .tool_wrap image {
  margin-left: 10rpx;
}

